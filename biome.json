{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "extends": ["./packages/linter-config/base.json"],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "off",
        "noStaticOnlyClass": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
