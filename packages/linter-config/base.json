{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "off",
        "noStaticOnlyClass": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    },
    "ignore": ["dist", "build", "*.config.*", ".next", "**/*.json"]
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
